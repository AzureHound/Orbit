// Zed settings
{
  // User Interface
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "relative_line_numbers": false,
  "current_line_highlight": "none",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato (Blue Blur+)"
  },

  // Panels
  "project_panel": {
    "default_width": 300,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "default_width": 300,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "bottom",
    "copy_on_select": true
  },

  // Features
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },

  //Vim
  "vim_mode": true,

  // Tweaks
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  },

  // Assistant
  "assistant": {
    "enabled": false,
    "version": "2",
    "button": false
  },
  "assistant_v2": {
    "enabled": false
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
