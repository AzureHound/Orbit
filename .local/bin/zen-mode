#!/usr/bin/env bash

# Get current DND status
current_status=$(swaync-client -D)

if [ "$current_status" = "true" ]; then
    # Turn DND off using the correct flag
    swaync-client -df
    echo "Zen mode disabled"
    notify-send "Zen Mode" "Disabled" -u low
else
    # Turn DND on using the correct flag
    swaync-client -dn
    echo "Zen mode enabled"
    notify-send "Zen Mode" "Enabled" -u low
fi
